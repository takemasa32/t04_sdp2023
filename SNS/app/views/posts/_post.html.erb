<div id="<%= dom_id post %>">
  <!-- component -->
  <!-- This is an example component -->
  <div class="max-w-lg mx-auto">
      <div class="bg-white shadow-md border border-gray-200 rounded-lg max-w-sm mb-5">
          <a href="#">

                <img class="rounded-t-lg" src=<%= post.image  %> alt="">

              <!--
              テスト画像
              <img class="rounded-t-lg" src=<%= "https://flowbite.com/docs/images/blog/image-1.jpg"  %> alt="">
              -->
          </a>
          <div class="p-5">
              <a href="#">
                  <h5 class="text-gray-900 font-bold text-2xl mb-2">
                      <%= post.title %>
                  </h5>
              </a>
                <p>
                <!-- <strong>投稿者:</strong> -->
                <% if post.user && post.user.profile %>
                    <%= link_to post.user.name, profile_path(post.user.profile) %>
                <% else %>
                    Unknown User, ID: <%= post.user_id %>
                <% end %>
                </p>
                <p class="font-normal text-gray-700 mb-3">
                        <%= post.body %>
                </p>
                <div style="text-align: left;">
                    <td><%= render "likes/btn", post: @post %></td> <!--いいねボタン-->
                </div>
          </div>
      </div>
  </div>
</div>
