<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <% if @profile.nil? %>
      <p>プロフィールが存在しません.</p>
      <p>プロフィールを <%= link_to "こちら", new_profile_path %>から作成してください．</p>
    <% else %>
      <div class="d-flex justify-content-center ml-2">
        <div class="ml-2">
          <%= link_to "posts list", posts_path, class: "btn btn-outline-dark btn-sm btn-block" %>
        </div>

        <% if current_user.id == @profile.user_id %>
          <div class="ml-2">
            <%= link_to "Edit profile", edit_profile_path(@profile), class: "btn btn-outline-dark btn-sm btn-block" %>
          </div>

          <div class="ml-2">
            <%= button_to "Delete profile", profile_path(@profile), method: :delete, class: "btn btn-outline-danger btn-sm btn-block" %>
          </div>
        <% end %>
      </div>
      <%= render @profile %>
    <% end %>
  </div>
</div>
