<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div>
      <% if @profile.nil? %>
        <p>プロフィールが存在しません.</p>
        <p>プロフィールを <%= link_to "こちら", new_profile_path %>から作成してください．</p>
      <% else %>
        <%= render @profile %>
        <div class="flex justify-center mt-2"> <!-- Updated class to flex justify-center -->
          <% if current_user.id == @profile.user_id %>
            <%= link_to "profileを編集する", edit_profile_path(@profile), class: "btn btn-primary mr-2" %>
            <%= button_to "profileを削除する", profile_path(@profile), method: :delete, class: "btn btn-danger ml-2" %>
          <% end %>
          <div class="ml-2">
            <%= link_to "投稿一覧へ", posts_path, class: "btn btn-secondary mr-2" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
